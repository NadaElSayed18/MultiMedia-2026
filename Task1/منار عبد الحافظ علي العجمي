def remove_from_list():
    # تعريف قائمة تحتوي على 4 عناصر نصية
    my_list = ['Apple', 'Banana', 'Cherry', 'Data']

    # طباعة القائمة الحالية للمستخدم
    print("Current list:", my_list)

    # طلب إدخال العنصر الذي يريد المستخدم إزالته
    item = input("Enter the item you want to remove: ")

    # التحقق إذا كان العنصر موجود داخل القائمة
    if item in my_list:
        # إزالة العنصر من القائمة
        my_list.remove(item)
        # طباعة رسالة نجاح
        print(f"{item} تم حذفه بنجاح!")
    else:
        # طباعة رسالة في حال لم يتم العثور على العنصر
        print(f"{item} غير موجود في القائمة.")

    # طباعة القائمة بعد التحديث (بعد الإزالة أو بدونها)
    print("Updated list:", my_list)

#  استدعاء الدالة لتشغيلها
remove_from_list()
