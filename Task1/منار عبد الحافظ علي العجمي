def calculate_factorial():
    # طلب إدخال عدد صحيح موجب من المستخدم
    n = int(input("Enter a positive integer: "))

    # تهيئة متغير النتيجة بقيمة 1 (لأن الضرب في 1 لا يغيّر الناتج)
    result = 1

    # استخدام حلقة for لتكرار الضرب من 1 حتى N
    for i in range(1, n + 1):
        # ضرب النتيجة الحالية في الرقم الحالي
        result *= i  # نفس المعنى: result = result * i

    # طباعة الناتج النهائي بعد انتهاء الحلقة
    print(f"مضروب العدد {n} هو {result}")

#   استدعاء الدالة لتشغيلها
calculate_factorial()
