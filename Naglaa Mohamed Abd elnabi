Task 5
def calculate_factorial():
    #Enter a positive integer N
    n=int(input('Enter a positive integer N:'))
    # check if n<=0 print error
    if n<=0:
        print('error') 
        return
    #the result var to 1(since0!=1)
    result=1
    #use a for loop to iterate from 1 to n
    for i in range(1,n+1):
        #Multiply the current num by the current result
        result*=i
        #print factorial value
    print(f"the factorial {n}:{result}")  
    #test fun
calculate_factorial()
