Task 4
def remove_from_list():
    #Difine a list 
    list=['Apple','Banana','cherry','data']
    #Display the original list
    print('list:',list)
    # prompt the user to enter
    item_to_remeve=input('Enter item you want remove:')
    #use if-else to check item
    if item_to_remeve in list:
        # if item found remove it
        list.remove(item_to_remeve)
        #print success message
        print(f"'{item_to_remeve}'successfully completed")
    else:
        #if item not found print not found
        print("it wasn't found in list") 
        # print new list
    print("new list:",list)    
remove_from_list()  
