def remove_from_list():
    my_list =  ["Apple","Bannana",'cherry','data']
    the_element=input("enter the element that you want to remove it: " )
    if the_element in my_list:
        my_list.remove(the_element)
        print(f"{the_element} was removed")
    else:
        print(f"{the_element}the element is not in your list")
           
     
    print(f'The List After remove ({the_element})', my_list)  

remove_from_list()
