def calculate_factorail():
    TheNum=int(input("Enter Positive Number: "))
    result=1
    for i in range(1,TheNum+1):
       result*=i
       print(f"Step {i}: result = {result}")

    print(f"\nThe factorial of {TheNum} is {result}")
calculate_factorail()
