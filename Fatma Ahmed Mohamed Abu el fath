def remove_from_list():
    # تعريف دالة باسم remove_from_list
    My_list = ['Apple', 'Banana', 'Cherry', 'Data']
    # تعريف قائمة تحتوي على أربع عناصر نصية

    item = input("Enter the item you want to remove: ")
    # طلب إدخال العنصر الذي يريد المستخدم حذفه

    if item in My_list:
        # التحقق إذا كان العنصر موجود في القائمة
        My_list.remove(item)
        # حذف العنصر من القائمة باستخدام الدالة remove()
        print(f"{item} has been removed successfully.")
        # طباعة رسالة نجاح عملية الحذف
    else:
        # إذا لم يكن العنصر موجود ضمن القائمة
        print(f"{item} was not found in the list.")
        # طباعة رسالة تفيد بعدم وجود العنصر

    print("Updated list:", My_list)
    # طباعة القائمة بعد التحديث (بعد حذف العنصر أو عدم تغييره)

def calculate_factorial():
    # تعريف دالة باسم calculate_factorial
    N = int(input("Enter a positive integer: "))
    # طلب إدخال عدد صحيح موجب من المستخدم وتحويله إلى رقم صحيح

    result = 1
    # تهيئة متغير النتيجة بالعدد 1 (لأن 0! = 1)

    for i in range(1, N + 1):
        # تكرار من 1 إلى العدد N باستخدام حلقة for
        result *= i
        # ضرب القيمة الحالية للنتيجة في العدد الحالي i

    print(f"The factorial of {N} is: {result}")
    # طباعة القيمة النهائية للعاملي (الفاكتوريال)
