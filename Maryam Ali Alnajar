

def remove_from_list():
    # هنا عملنا calling للدالة
    My_list = ['Apple', 'Banana', 'Cherry', 'Data']
    #تعريف الليست اللي فيها العناصر
    item = input("Enter the item you want to remove: ")
    #هطلب من المستخدم يدخل العنصر اللي عايزه امسحه
    if item in My_list:
        My_list.remove(item)  
        #الشرط
        print(f"{item} removed successfully.")  # طباعة  نجاح الحذف
    else:
        print(f"{item} not found in the list.")  # طباعة أن العنصر مش موجود


    print("Updated list:", My_list)
     # طباعة الليست بعد التحديث




2

def calculate_factorial():
    # function calling

    n = int(input("Enter a positive integer: "))
    # بنطلب من المستخدم يدخل عدد صحيح موجب وبنخزنه في المتغير n

    result = 1
    # بنبدأ المتغير result بـ 1 لأن حاصل ضرب أي حاجة في 1 مش هيأثر 

    for i in range(1, n + 1):
        # نستخدم for loop من 1 لحد n+1

        result *= i
        # نضرب ال result في i كل مرة
    print("The factorial is:", result)
    # بنطبع الناتج النهائي 
